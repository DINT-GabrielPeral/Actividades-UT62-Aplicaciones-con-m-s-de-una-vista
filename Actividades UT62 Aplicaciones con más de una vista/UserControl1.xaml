<UserControl x:Class="Actividades_UT62_Aplicaciones_con_más_de_una_vista.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Actividades_UT62_Aplicaciones_con_más_de_una_vista"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" Background="White">
        <TextBlock Text="Nombre"></TextBlock>
        <TextBox Margin="0,0,0,20"></TextBox>
        <TextBlock Text="Edad"></TextBlock>
        <TextBox Margin="0,0,0,20"></TextBox>
        <TextBlock Text="Nacionalidad"></TextBlock>
        <StackPanel Margin="0,0,0,20" Orientation="Horizontal"> 
            <ComboBox ></ComboBox>
            <Button Content="+"></Button>
        </StackPanel>
        <Button HorizontalAlignment="Center" Content="Aceptar"></Button>
    </StackPanel>
</UserControl>
