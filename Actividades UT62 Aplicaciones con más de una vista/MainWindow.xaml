<Window x:Class="Actividades_UT62_Aplicaciones_con_más_de_una_vista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Actividades_UT62_Aplicaciones_con_más_de_una_vista"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Margin="5" Content="Nueva Persona" Command="{Binding }"></Button>
            <Button Margin="5" Content="Listado de personas"></Button>
        </StackPanel>
        <Border Padding="5" Margin="5" BorderThickness="2" BorderBrush="Black">
            <ContentControl></ContentControl>
        </Border>
    </DockPanel>
</Window>
